<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.iwgang.familiarrecyclerview.FamiliarRecyclerView
        android:id="@+id/mHorRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:frv_dividerHeight="1dp"
        app:frv_footerDividersEnabled="true"
        app:frv_headerDividersEnabled="true"
        app:frv_layoutManager="grid"
        app:frv_layoutManagerOrientation="horizontal"
        app:frv_spanCount="4" />

</FrameLayout>
